{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["src/*.test.ts"]
}